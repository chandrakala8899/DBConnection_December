<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
    <persistence-unit name="JpaDemo">
        <class>com.neoteric.dec_dbconnection.jpainheritance.FutureStocksEntity</class>
        <class>com.neoteric.dec_dbconnection.jpainheritance.StockEntity</class>
        <class>com.neoteric.dec_dbconnection.jpainheritance.RestrictedStockEntity</class>
        <class>com.neoteric.dec_dbconnection.jpainheritance.OptionalStockEntity</class>
        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3307/sonar"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="sonar"/>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>


    <persistence-unit name="CreditCard">
        <class> com.neoteric.dec_dbconnection.creditcard.entity.CreditCardEntity</class>
        <class> com.neoteric.dec_dbconnection.creditcard.entity.TransactionEntity</class>
        <class> com.neoteric.dec_dbconnection.creditcard.entity.EMIEntity</class>
        <class> com.neoteric.dec_dbconnection.creditcard.entity.BillPeriodEntity</class>
        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3307/creditcard" />
            <property name="jakarta.persistence.jdbc.user" value="root" />
            <property name="jakarta.persistence.jdbc.password" value="sonar" />
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
            <property name="hibernate.hbm2ddl.auto" value="update" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
        </properties>
    </persistence-unit>
</persistence>
